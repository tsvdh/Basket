<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<Stage title="Basket" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <scene>
        <Scene>
            <AnchorPane prefHeight="500.0" prefWidth="800.0">
            <children>
               <BorderPane prefHeight="500.0" prefWidth="800.0">
                  <top>
                     <MenuBar focusTraversable="false" BorderPane.alignment="CENTER">
                        <menus>
                           <Menu mnemonicParsing="false" style="-fx-font-size: 14;" text="File">
                              <items>
                                 <MenuItem mnemonicParsing="false" style="-fx-font-size: 14;" text="Close" />
                              </items>
                           </Menu>
                           <Menu mnemonicParsing="false" style="-fx-font-size: 14;" text="Edit">
                              <items>
                                 <MenuItem mnemonicParsing="false" style="-fx-font-size: 14;" text="Delete" />
                              </items>
                           </Menu>
                           <Menu mnemonicParsing="false" style="-fx-font-size: 14;" text="Help">
                              <items>
                                 <MenuItem mnemonicParsing="false" text="About" />
                              </items>
                           </Menu>
                        </menus>
                     </MenuBar>
                  </top>
                  <center>
                     <TabPane focusTraversable="false" tabClosingPolicy="UNAVAILABLE" tabMaxHeight="100.0" tabMinHeight="1.0" BorderPane.alignment="CENTER">
                        <tabs>
                           <Tab closable="false" style="-fx-font-size: 26;" text="Store">
                              <content>
                                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                              </content>
                           </Tab>
                           <Tab closable="false" style="-fx-font-size: 26;" text="Library">
                              <content>
                                 <ScrollPane focusTraversable="false" prefHeight="446.0" prefWidth="800.0">
                                    <content>
                                       <VBox fx:id="vBox" />
                                    </content>
                                 </ScrollPane>
                              </content>
                           </Tab>
                        </tabs>
                        <BorderPane.margin>
                           <Insets />
                        </BorderPane.margin>
                     </TabPane>
                  </center>
               </BorderPane>
            </children></AnchorPane>
        </Scene>
    </scene>
</Stage>
